{
    "name": "sandreas/m4b-tool",
    "description": "",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "monolog/monolog": "^1.22",
        "symfony/console": "^7.0",
        "symfony/process": "^7.0",
        "symfony/cache": "^7.0",
        "twig/twig": "^3.0",
        "sandreas/php-time": "dev-master",
        "sandreas/php-strings": "dev-master",
        "ext-simplexml": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-zip": "*",
        "ext-curl": "*",
        "lywzx/php-epub": "^0.1.2",
        "erusev/parsedown": "^1.7",
        "doctrine/collections": "^2.0",
        "wapmorgan/media-file": "^0.1.4",
        "psr/http-message": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "M4bTool\\": "src/library/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "platform": { "php": "8.2" }
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:sandreas/php-strings.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:sandreas/php-time.git"
        }
    ]
}
